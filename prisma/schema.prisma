generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId         String   @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  email          String   @unique
  password       String
  profilePic     String?
  hasSuscription Boolean  @default(false)
  isNew          Boolean  @default(true)
  interestsIds   String[] @db.ObjectId
}

model Interest {
  interestId          String @id @default(auto()) @map("_id") @db.ObjectId
  interestDescription String
}

model Match {
  matchId String @id @default(auto()) @map("_id") @db.ObjectId
}
