<html lang="en">

<head>
  <title>Dates App - Chat con {{secondUser.username}}</title>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <!--Font awesome icons-->
  <script src="https://kit.fontawesome.com/e0497758cb.js" crossorigin="anonymous"></script>
  <link rel="icon" href="/public/img/favicon.png" />
  <link rel="stylesheet" href="/public/css/chat.css" />
</head>
<header>
  <a class="btn btn-warning" href="/home/matches"><span class="fa-solid fa-arrow-left"></span>
    Regresar a tus match</a>
</header>

<body>
  <main style="min-height: 90vh;"
    class="position-relative d-flex flex-direction-column justify-content-center py-3 px-5">
    <div class="border border-dark border-opacity-50 rounded-4 flex-grow-1 d-flex flex-column justify-content-between">
      <div class="w-100 bg-warning bg-opacity-50 rounded-top-4 d-flex align-items-center justify-content-center p-1">
        <div class="d-flex align-items-center" style="gap: 2rem;">
          <img src={{secondUser.profilePic}} alt="{{secondUser.username}}-profile-pic" width="55" height="55"
            class="rounded-circle" />
          <div class="d-flex flex-column justify-content-center" id="user-id-{{secondUser.userId}}">
            <h4>{{secondUser.username}}</h4>
            <small id="otherUserStatus" class="text-center">Desconectado</small>
          </div>
        </div>
      </div>
      <div id="chatContainer" class="p-3 d-flex flex-column" name="bearer-{{thisUserId}}"
        style="flex: 1 1 auto; overflow-y: auto; height: 0px; gap: 2rem;">
        {{#each messages}}
        <div class="{{this.cssClassName}} rounded-pill message">{{this.textContent}}
          <small class="message-time">{{this.sendAt}}</small>
        </div>
        {{/each}}
      </div>
      <div class="pt-3 px-3 border-top border-dark border-opacity-50">
        <form id="chatForm" class="w-100 d-flex align-items-center" style="gap: 1rem;">
          <input type="text" class="form-control w-100" placeholder="Escribe un mensaje" />
          <button class="btn btn-warning rounded-pill" type="submit">
            <span class="fa-solid fa-paper-plane"></span></button>
        </form>
      </div>
    </div>
  </main>
  <footer>
    <!-- place footer here -->
  </footer>
  <!-- Bootstrap JavaScript Libraries -->

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
  <script src="/lib/jquery/jquery.min.js"></script>
  <script src="/public/js/helper.js"></script>
  {{#each scripts}}
  <script src={{this}}></script>
  {{/each}}
</body>

</html>
