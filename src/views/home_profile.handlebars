<!-- Modal for interests update -->
<div class="modal fade" tabindex="-1" id="interestsModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Actualizar Intereses</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="d-flex justify-content-center aligh-items-center flex-wrap" style="gap: 0.5rem;">
          {{#each allInterests}}
          {{#if this.selected}}
          <button selected id={{this.interestId}}
            class="rounded-pill p-1 btn btn-warning">{{this.interestDescription}}</button>
          {{else}}
          <button selected id={{this.interestId}}
            class="rounded-pill p-1 btn btn-outline-success">{{this.interestDescription}}</button>
          {{/if}}
          {{/each}}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="updateUserInterestsButton">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <img src={{user.profilePic}} alt="user profile pic" class="rounded-circle" width="140" height="140"
      style="object-fit: cover;" />
    <h1>{{user.username}}</h1>
  </div>
  <div class="d-flex" style="gap: 1rem;">
    <div id="interestsContainer"
      class="bg-secondary rounded-4 p-3 d-flex position-relative align-items-center justify-content-center bg-opacity-50"
      style="gap: 1rem;">
      <div class="d-flex rounded-4 p-3" style="gap: 1rem;">
        {{#each userInterests}}
        <p class="bg-warning text-center p-1 rounded-pill">{{this.interestDescription}}</p>
        {{/each}}
      </div>
      <button class="position-absolute top-0 start-0 me-3 btn btn-primary rounded" id="editInterestsButton"
        data-bs-toggle="modal" data-bs-target="#interestsModal"><span
          class="text-white fa-solid fa-pencil"></span></button>
    </div>
    <div id="personalInfoContainer">
    </div>
  </div>
</div>
