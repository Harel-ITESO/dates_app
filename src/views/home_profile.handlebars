<div>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <img src={{user.profilePic}} alt="user profile pic" class="rounded-circle" width="140" height="140"
      style="object-fit: cover;" />
    <h1>{{user.username}}</h1>
  </div>
  <div class="d-flex" style="gap: 1rem;">
    <div id="interestsContainer" class="bg-secondary rounded-4 p-3 d-flex flex-wrap-1" style="gap: 1rem;">
      {{#each interests}}
      <p class="bg-warning text-center p-1 rounded-pill">{{this}}</p>
      {{/each}}
    </div>
    <div id="personalInfoContainer">
    </div>
  </div>
</div>
